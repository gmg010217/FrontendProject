<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz" >

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88c9d8b7"
        android:layout_gravity="center"
        android:clickable="false" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/quizQuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginBottom="16dp"
            android:text="질문이 여기에 표시됩니다 4개의 보기 중 하나를 선택하세요!"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/quizOptionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/quizOption1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옵션1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/quizOption2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옵션2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/quizOption3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옵션3"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"/>

            <RadioButton
                android:id="@+id/quizOption4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="옵션4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"/>
        </RadioGroup>

        <Button
            android:id="@+id/quizNextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 문제"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:backgroundTint="#5c6e56" />
    </LinearLayout>
</FrameLayout>