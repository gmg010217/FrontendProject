<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#c9d8b7">

    <TextView
        android:id="@+id/exerciseQuoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 명언 : 하루의 작은 움직임이 인생의 큰 변화를 만든다."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginVertical="8dp" />

    <CalendarView
        android:id="@+id/exerciseCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/moveExerciseDetailBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 조회/기록하기"
        android:textSize="18sp"
        android:backgroundTint="#5c6e56" />\


    <TextView
        android:id="@+id/exerciseRecommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동 루틴 추천 : 하루에 한번씩 7km 러닝을 추천합니다."
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#5c6e56"
        android:layout_marginTop="20dp"/>
</LinearLayout>